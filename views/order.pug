include header

div.wrap
    div.content
        header.site-header
            include site_header_order
        div.container
            div.row
                div(class='col col-md-12')
                    h3.cart-header Cart
                    div(id='cart-nav')
                div(class='col col-md-12')
                    h3 Create order
                div(class='col col-md-6')
                    form#lite-shop-order(action='')
                        div.form-control
                            label(for='username') Name
                            input(
                                type='text',
                                id='username',
                                placeholder='Enter your name'
                            )
                        div.form-control
                            label(for='phone') Phone
                            input(
                                type='text',
                                id='phone',
                                placeholder='+7 999 999 99 99'
                            )
                        div.form-control
                            label(for='email') Email
                            input(
                                type='text',
                                id='email',
                                placeholder='mail@exemple.com'
                            )
                        div.form-control
                            label(for='address') Address
                            textarea(
                                id='address',
                                placeholder='Where are you'
                            )
                        div.form-control
                            label(for='rule')
                                input(
                                    type='checkbox',
                                    id='rule',
                                    value='1'
                                )
                                span Terns and Conditions
                        div(class='form-control text-right')
                            button(class='button-primary', type='subtext') Finish order
include nav
include footer
script(src='js/order.js')